<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_products_actionbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <EditText
            android:id="@+id/edit_search"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:hint="@string/search"
            android:textColorHint="@color/gray" />

        <Button
            android:id="@+id/button_search"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/edit_search"
            android:background="@drawable/search" />

        <Button
            android:id="@+id/button_filter"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:background="@drawable/filter" />

        <Button
            android:id="@+id/button_logout"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:background="@drawable/logout" />

        <Button
            android:id="@+id/button_history"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:layout_toStartOf="@+id/button_logout"
            android:background="@drawable/history" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grid_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_cart"
        android:layout_below="@id/layout_products_actionbar"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:padding="16dp"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/layout_cart"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <Button
            android:id="@+id/button_cart_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:background="@drawable/corners_white"
            android:text="@string/confirm"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/button_cart_confirm"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:padding="4dp"
            android:scrollbars="none" />

    </RelativeLayout>

</RelativeLayout>